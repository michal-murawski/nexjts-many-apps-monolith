{
	"name": "root",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "pnpm --stream --parallel dev",
		"dev:client": "pnpm -F client dev",
		"dev:advisor": "pnpm -F advisor dev",
		"build:client": "pnpm --stream -F client build",
		"build:advisor": "pnpm --stream -F advisor build",
		"start:client": "pnpm --stream -F client start",
		"start:advisor": "pnpm --stream -F advisor start",
		"svgr": "svgr --icon --typescript --title-prop --ignore-existing -d components/icons svg-icons ",
		"lint": "pnpm run lint:eslint & pnpm run lint:tsc",
		"lint:eslint": "pnpm --stream -r lint:eslint",
		"lint:tsc": "tsc --noEmit",
		"prettier:all": "prettier --write **/*.{ts,tsx,js,scss,css,json,mdx}",
		"prepare": "is-ci || husky install",
		"test": "pnpm --stream -r test"
	},
	"dependencies": {
		"@headlessui/react": "1.6.6",
		"@tanstack/react-query": "4.0.10",
		"clsx": "1.2.1",
		"cssnano": "5.1.12",
		"lodash": "4.17.21",
		"msw": "0.44.2",
		"next": "12.2.1",
		"next-compose-plugins": "2.2.1",
		"next-plugin-preact": "3.0.7",
		"next-transpile-modules": "9.0.0",
		"preact": "10.10.0",
		"preact-render-to-string": "5.2.1",
		"react": "npm:@preact/compat@17.1.1",
		"react-dom": "npm:@preact/compat@17.1.1",
		"react-hook-form": "7.33.1",
		"react-router-dom": "6.3.0",
		"react-ssr-prepass": "npm:preact-ssr-prepass@1.2.0",
		"tailwindcss": "3.1.7"
	},
	"devDependencies": {
		"@next/bundle-analyzer": "12.2.2",
		"@prefresh/babel-plugin": "0.4.0",
		"@svgr/cli": "6.2.1",
		"@tanstack/react-query-devtools": "4.0.10",
		"@types/node": "18.0.3",
		"@types/react": "18.0.15",
		"@types/react-modal": "3.13.1",
		"@typescript-eslint/eslint-plugin": "5.30.6",
		"@typescript-eslint/parser": "5.30.7",
		"autoprefixer": "10.4.7",
		"cross-env": "7.0.3",
		"eslint": "8.19.0",
		"eslint-config-next": "12.2.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-storybook": "0.6.1",
		"fork-ts-checker-webpack-plugin": "6.5.2",
		"husky": "7.0.0",
		"is-ci": "3.0.1",
		"lint-staged": "13.0.3",
		"postcss": "8.4.14",
		"prettier": "2.7.1",
		"typescript": "4.7.4",
		"webpack": ">= 4"
	}
}
